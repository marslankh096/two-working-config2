<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_premium_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000"
    android:visibility="gone">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/card_premium"
            android:layout_width="match_parent"
            android:layout_height="402dp"
            android:layout_marginHorizontal="42dp"
            android:background="@drawable/bg_premium_card_main"
            app:layout_constraintBottom_toTopOf="@+id/iv_close_premium"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guide_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.1" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guide_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.9" />

            <ImageView
                android:id="@+id/iv_premium_object"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_24dp"
                android:src="@drawable/ic_premium_object"
                app:layout_constraintEnd_toStartOf="@+id/guide_right"
                app:layout_constraintStart_toEndOf="@+id/guide_left"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_50dp"
                android:background="@drawable/bg_button_remove_ads"
                android:paddingHorizontal="@dimen/margin_30dp"
                app:layout_constraintEnd_toEndOf="@+id/iv_premium_object"
                app:layout_constraintStart_toEndOf="@+id/iv_premium_object"
                app:layout_constraintTop_toTopOf="@+id/iv_premium_object">

                <TextView
                    android:id="@+id/tv_remove"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="Remove"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:text="Ads"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_remove" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/tv_remove_ads"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Remove Ads"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                android:translationY="-30dp"
                app:layout_constraintEnd_toStartOf="@+id/guide_right"
                app:layout_constraintStart_toEndOf="@+id/guide_left"
                app:layout_constraintTop_toBottomOf="@+id/iv_premium_object" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_features"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:translationY="-10dp"
                app:layout_constraintEnd_toStartOf="@+id/guide_right"
                app:layout_constraintStart_toEndOf="@+id/guide_left"
                app:layout_constraintTop_toBottomOf="@+id/tv_remove_ads">

                <ImageView
                    android:id="@+id/iv_tick_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_premium_tick"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_10dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="@string/not_be_disturbed_by_ads_anymore"
                    android:textColor="#5B5B5B"
                    android:textSize="10sp"
                    app:layout_constraintBottom_toBottomOf="@+id/iv_tick_one"
                    app:layout_constraintStart_toEndOf="@+id/iv_tick_one"
                    app:layout_constraintTop_toTopOf="@+id/iv_tick_one" />

                <ImageView
                    android:id="@+id/iv_tick_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_8dp"
                    android:src="@drawable/ic_premium_tick"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/iv_tick_one" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_10dp"
                    android:text="@string/translate_image_by_one_click"
                    android:textColor="#5B5B5B"
                    android:textSize="10sp"
                    app:layout_constraintBottom_toBottomOf="@+id/iv_tick_two"
                    app:layout_constraintStart_toEndOf="@+id/iv_tick_two"
                    app:layout_constraintTop_toTopOf="@+id/iv_tick_two" />

                <ImageView
                    android:id="@+id/iv_tick_three"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_8dp"
                    android:src="@drawable/ic_premium_tick"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/iv_tick_two" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_10dp"
                    android:text="@string/convo_translator_in_all_languages"
                    android:textColor="#5B5B5B"
                    android:textSize="10sp"
                    app:layout_constraintBottom_toBottomOf="@+id/iv_tick_three"
                    app:layout_constraintStart_toEndOf="@+id/iv_tick_three"
                    app:layout_constraintTop_toTopOf="@+id/iv_tick_three" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_15dp"
                app:layout_constraintBottom_toTopOf="@+id/premium_button"
                app:layout_constraintEnd_toEndOf="@+id/premium_button"
                app:layout_constraintStart_toStartOf="@+id/premium_button"
                app:layout_constraintTop_toBottomOf="@+id/layout_features">

                <TextView
                    android:id="@+id/tv_premium_detail"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="@string/just_lifetime"
                    android:textColor="@color/black"
                    android:textSize="10sp"
                    android:gravity="center"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/premium_button"
                android:layout_width="0dp"
                android:layout_height="@dimen/dimen_38dp"
                android:layout_marginBottom="@dimen/dimen_15dp"
                android:background="@drawable/bg_button_premium_main"
                android:paddingHorizontal="25dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/guide_right"
                app:layout_constraintStart_toEndOf="@+id/guide_left">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/upgrade_now"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:id="@+id/iv_close_premium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_20dp"
            android:src="@drawable/icon_remove_premium"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/card_premium" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
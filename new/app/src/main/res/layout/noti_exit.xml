<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="10dp"
        android:background="@drawable/bg_exit"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remove Search Box"
            android:id="@+id/title_dialog"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="4dp"
            android:textSize="16sp"
            android:textColor="#000"
            android:textStyle="bold"
             />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Do you want to remove the search box in the notification bar?"
            android:id="@+id/text_dialog"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_below="@+id/title_dialog"
            android:textSize="15sp"
            android:textColor="#ff000000"
            />

        <RelativeLayout
            android:id="@+id/ad_layout_dialog"
            android:layout_width="match_parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:padding="2dp"
            android:visibility="gone"
            android:layout_below="@+id/text_dialog"
            android:layout_height="250dp">

            <FrameLayout
                android:id="@+id/fl_adplaceholder_dialogs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <TextView
            android:id="@+id/yes_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ad_layout_dialog"
            android:layout_alignParentEnd="true"
            android:paddingRight="30dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp"
            android:textStyle="bold"
            android:text="YES"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            />

        <TextView
            android:id="@+id/no_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ad_layout_dialog"
            android:layout_toStartOf="@+id/yes_txt"
            android:layout_marginEnd="40dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="15dp"
            android:textSize="14sp"
            android:textColor="@color/colorPrimary"
            android:text="NO"
            android:textStyle="bold"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            />

    </RelativeLayout>


</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_favorite"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_history_input_word"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="18dp"
        android:text="@string/label_splash_main_title"
        android:textColor="#b3000000"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/iv_star_history"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_star_history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="9dp"
        android:paddingHorizontal="5dp"
        android:src="@drawable/ic_star_history_unfil"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_history_input_word"

        />


    <TextView
        android:id="@+id/tv_history_translated_word"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:text="@string/appbar_scrolling_view_behavior"
        android:textColor="#4286f5"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/tv_history_input_word"
        app:layout_constraintStart_toStartOf="@+id/tv_history_input_word"
        app:layout_constraintTop_toBottomOf="@+id/tv_history_input_word"

        app:layout_constraintVertical_bias="0.0" />

    <View
        android:id="@+id/view_line_history"
        android:layout_width="0dp"
        android:layout_height="0.88dp"
        android:layout_marginTop="16dp"
        android:background="@color/app_back_ground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
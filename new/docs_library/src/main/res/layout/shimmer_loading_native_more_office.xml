<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/shimmer_view_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="52dp"
    tools:ignore="MissingDefaultResource">

    <ImageView
        android:id="@+id/shimmer_bannerIcon"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginVertical="4dp"
        android:layout_marginStart="21dp"
        android:background="@color/gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/admobNative_headline"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:background="@color/gray"
        android:textSize="14sp"
        android:layout_marginEnd="6dp"
        app:layout_constraintEnd_toStartOf="@id/guideline"
        app:layout_constraintStart_toEndOf="@id/shimmer_bannerIcon"
        app:layout_constraintTop_toTopOf="@id/shimmer_bannerIcon"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/admobNative_body"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="\n"
        android:background="@color/gray"
        android:textColor="#7c7c7c"
        android:textSize="11sp"
        android:layout_marginEnd="6dp"
        app:layout_constraintEnd_toStartOf="@id/guideline"
        app:layout_constraintStart_toStartOf="@id/admobNative_headline"
        app:layout_constraintTop_toBottomOf="@id/admobNative_headline"/>

    <TextView
        android:id="@+id/admobNative_call_to_action"
        android:layout_width="0dp"
        android:layout_height="25dp"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/guideline"
        app:layout_constraintTop_toTopOf="@id/shimmer_bannerIcon"
        app:layout_constraintBottom_toBottomOf="@id/shimmer_bannerIcon"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.84" />

    <FrameLayout
        android:id="@+id/sponsered_layout"
        android:layout_width="wrap_content"
        android:layout_height="13dp"
        android:backgroundTint="#545454"
        android:paddingHorizontal="3dp"
        android:layout_marginTop="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed">

        <TextView
            android:id="@+id/sponsered"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="0.5dp"
            android:layout_marginBottom="0.05dp"
            android:text="AD"
            android:textColor="#ffffff"
            android:textSize="8sp"
            android:textAppearance="@style/TextAppearance.FontPath.Bold"
            android:textStyle="bold"/>

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

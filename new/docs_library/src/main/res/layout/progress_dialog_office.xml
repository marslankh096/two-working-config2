<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_background_office"
    android:paddingBottom="26dp">

    <TextView
        android:id="@+id/processing_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:textAppearance="@style/TextAppearance.FontPath.Medium"
        android:text="@string/processing_dialog_title_office"
        android:textAlignment="textStart"
        android:textColor="#001b36"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="2dp"
        app:layout_constraintStart_toEndOf="@id/processing_imgg"
        app:layout_constraintTop_toTopOf="@id/processing_imgg"
        app:layout_constraintBottom_toBottomOf="@id/processing_imgg" />

    <ImageView
        android:id="@+id/processing_imgg"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:background="@drawable/icons_bg_office"
        android:src="@drawable/ic_processing_img_office"
        app:tint="@color/colorPrimary"
        android:padding="7dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/processing_subtxt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/processing_dialog_sub_title_office"
        android:textColor="#909cbb"
        android:textAlignment="textStart"
        android:progressBackgroundTint="#cecece"
        android:layout_marginTop="22dp"
        android:textAppearance="@style/TextAppearance.FontPath.Medium"
        android:textStyle="bold"
        android:textSize="14sp"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginEnd="16dp"
        app:layout_constraintStart_toStartOf="@id/processing_imgg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/processing_txt" />

    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:layout_width="0dp"
        android:layout_height="6.7dp"
        android:id="@+id/progress_bar"
        android:indeterminate="false"
        app:trackThickness="8dp"
        app:trackCornerRadius="3.3dp"
        app:trackColor="#1F1877f2"
        app:indicatorColor="@color/colorPrimary"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="14dp"
        app:layout_constraintStart_toStartOf="@id/processing_imgg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/processing_subtxt"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/amount_of_images_left"
        android:layout_marginTop="7dp"
        android:textColor="#1f1f1f"
        android:textSize="12sp"
        android:textAppearance="@style/TextAppearance.FontPath.Medium"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/progress_bar"
        app:layout_constraintTop_toBottomOf="@+id/progress_bar"
        android:text="1/1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/amount_of_images_percentage"
        android:layout_marginTop="7dp"
        android:textColor="#1f1f1f"
        android:textAppearance="@style/TextAppearance.FontPath.Medium"
        android:textStyle="bold"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/progress_bar"
        app:layout_constraintTop_toBottomOf="@+id/progress_bar"
        android:text="30%"/>

</androidx.constraintlayout.widget.ConstraintLayout>